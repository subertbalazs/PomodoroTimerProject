<Page
    x:Class="TimerEm2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimerEm2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="23,404,0,0" VerticalAlignment="Top"                          FontSize="40" Width="138"/>
        <Button x:ConnectionId='2' x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="198,404,0,0" VerticalAlignment="Top"                           FontSize="40" Width="140"/>
        <TextBlock x:ConnectionId='3' x:Name="workSecondBlock" HorizontalAlignment="Left" Margin="206,10,0,0" TextWrapping="Wrap" Text="00" VerticalAlignment="Top" FontSize="133.333" Width="154"/>
        <TextBlock x:ConnectionId='4' x:Name="workMinuteBlock" HorizontalAlignment="Left" Margin="16,10,0,0" TextWrapping="Wrap" Text="25" VerticalAlignment="Top" FontSize="133.333" Width="145" Height="177"/>
        <TextBlock x:ConnectionId='5' x:Name="colonBlock" HorizontalAlignment="Left" Margin="167,1,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontSize="133.333"/>
        <TextBlock x:ConnectionId='6' x:Name="restSecondBlock" HorizontalAlignment="Left" Margin="206,192,0,0" TextWrapping="Wrap" Text="00" VerticalAlignment="Top" FontSize="133.333"/>
        <TextBlock x:ConnectionId='7' x:Name="colonBlock2" HorizontalAlignment="Left" Margin="167,183,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontSize="133.333"/>
        <TextBlock x:ConnectionId='8' x:Name="restMinuteBlock" HorizontalAlignment="Left" Margin="10,192,0,0" TextWrapping="Wrap" Text="05" VerticalAlignment="Top" FontSize="133.333"/>
        <Button x:ConnectionId='9' x:Name="btnStartRest" Content="Start" HorizontalAlignment="Left" Margin="198,404,0,0" VerticalAlignment="Top" Height="65" Width="140" FontSize="40"                            Visibility="Collapsed"/>

    </Grid>
</Page>

